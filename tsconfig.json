{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "outDir": "build",
        "rootDir": "./src",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "ng-semantic.ts",
        "built/vendor/rxjs/operator",        
        "src/vendor/rxjs/operator"
    ]
}